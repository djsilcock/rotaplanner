<!DOCTYPE html>
<html>
  <head>
    <script
      type="module"
      src="{{ url_for('static', filename='js.js') }}"
    ></script>
    
    <link rel="stylesheet" href="{{ url_for('static', filename='css.css') }}" />
    <title>
      {%block title %}Rotaplanner{% endblock %}
    </title>
    <style>
    


    </style>
  </head>

  <body>
    <div class="sidebar">
        <input type="checkbox" id="menu-toggle" checked/>
      <label for="menu-toggle" class="menu-icon">&#9776;</label>
      <nav class="ui inverted vertical menu">
        <a class="item" href="/rota-grid/staff/grid">Rota by person</a>
        <a class="item" href="/rota-grid/location/grid">Rota by location</a>

        <a class="item" href="">Manage activity templates</a>
        <a class="item" href="/api/templates/supply">Manage supply templates</a>
        <a class="item" href="/api/activities/table">Rota solver</a>
        <a class="item" href="/api/templates/supply">Import from CLW</a>
        <a class="item" href="/api/config">Setup staff</a>
      </nav>
      <button slot="footer" variant="primary">Close</button>
    </div>
    <div class="pusher">
      <div class="header">
        <button>
          <sl-icon name="layout-text-sidebar-reverse" id="menubutton"></sl-icon>
        </button>
        {{self.title()}}
      </div>
      {%block main%} ... {% endblock %}
      <hr />
      <div id="additional"></div>
    </div>
    <script>
      const menuButton = document.getElementById("menubutton");
      const drawer = document.querySelector("sl-drawer");
      menuButton.addEventListener("click", () => {
        drawer.show();
      });
    </script>
  </body>
</html>