<turbo-stream target="dialog-content" action="update">  
<template>

    <div class="header">Add activity</div>
    <div class="content">
    
    <turbo-frame id="add-activity-form">
      <form id="add-activity-form" method="post" action="/rota_grid/add_activity">
        {{activity_form.staff}}
        {{activity_form.location}}
        {{activity_form.date}}
        <div class="ui form">
          <div class="field">
            
            {{activity_form.existing_activity}}
          </div>
          <sl-button type="submit" name="action" value="existing" class="ui button">Allocate</sl-button>
          <hr/>
          <div class="field">
            
            {{activity_form.from_template}}
          </div>
          <sl-button type="submit" name="action" value="template" class="ui button">Create</sl-button>
          <hr/>
          <sl-button type="submit" name="action" value="new" class="ui button">Create new activity</sl-button>
          <hr/>
          </div>
        
      </form>
      </turbo-frame>
    </div>
    <div class="actions">
      <div class="ui cancel button">Cancel</div>
    </div>
    
    
</template>
    </turbo-stream>